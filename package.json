{
  "name": "snapjs-ui",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/theScottyJam/snap.js.git"
  },
  "homepage": "https://thescottyjam.github.io/snap.js",
  "devDependencies": {
    "@eslint/css": "^0.14.1",
    "@eslint/js": "^9.39.1",
    "@eslint/json": "^0.14.0",
    "@eslint/markdown": "^7.5.1",
    "@stylistic/eslint-plugin": "^5.6.1",
    "eslint": "^9.39.1",
    "gh-pages": "^4.0.0",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "serve": "^14.2.5",
    "showdown": "^2.1.0"
  },
  "scripts": {
    "predeploy": "npm run lint:fix && npm run test && npm run build",
    "deploy": "gh-pages -d public",
